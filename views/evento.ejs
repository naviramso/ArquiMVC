                    <div class="col-md-5"><img class="card-img-top mb-4 mb-md-0" style="width: 400px;" src=<%=imagen %>
                        alt="..." /></div>
                    <div class="col-md-1">

                        <h1 class="display-5 fw-bolder">
                            <%= titulo %>
                        </h1>
                        <p class="lead">
                            <%= descripcion %>
                                </>
                        </p>
                        <div class="fs-5 mb-5">
                            <span>Precio: Bs.<%= precio %> </span>
