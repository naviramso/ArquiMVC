        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script>
            $(document).ready(function () {
                $('#reservar').click(function () {
                    var id_boleto = '<%= id_boleto %>';
                    var cantidad_reserva = $('#inputQuantity').val();
                    var cantidad = '<%= cantidad %>';

                    // Crear el objeto de datos a enviar
                    var data = {
                        id_boleto: id_boleto,
                        cantidad_reserva: cantidad_reserva,
                        cantidad: cantidad
                    };

                    // Realizar la petición AJAX
                    $.ajax({
                        url: '/reserva', // Reemplaza con la ruta adecuada en tu servidor
                        type: 'POST',
                        data: data,
                        success: function (response) {
                            // Procesar la respuesta del servidor
                            console.log(response)
                            alert("Reserva realizada con éxito" );
                            $('#cantidad').text("Cantidad Boletos Disponibles: " + response);
                        },
                        error: function (xhr, status, error) {
                            // Manejar errores de la petición
                            console.log(error);
                        }
                    });
                });
            });
        </script>


</body>

</html>